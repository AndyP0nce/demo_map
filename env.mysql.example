# ============================================================================
# Campus Apartments Backend Configuration with MySQL
# ============================================================================

# Flask Configuration
FLASK_APP=app.py
FLASK_ENV=development  # development or production
SECRET_KEY=your-secret-key-change-this-in-production-use-random-string

# ============================================================================
# MySQL Database Configuration
# ============================================================================

# IMPORTANT: Fill in YOUR MySQL details below!

# Format: mysql+pymysql://username:password@host:port/database
DATABASE_URL=mysql+pymysql://root:your_password@localhost:3306/campus_apartments

# Or configure separately:
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=your_password_here
MYSQL_DATABASE=campus_apartments

# ============================================================================
# Server Configuration
# ============================================================================

HOST=0.0.0.0
PORT=5000

# ============================================================================
# Google Maps API Key
# ============================================================================

GOOGLE_MAPS_API_KEY=AIzaSyAczJVb_-U_XpOXDMlE1nODMDv91Qn2vXU

# ============================================================================
# Email Configuration (for contact/notifications - future use)
# ============================================================================

MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# ============================================================================
# CORS Origins (comma-separated)
# ============================================================================

CORS_ORIGINS=http://localhost:3000,http://localhost:5000

# ============================================================================
# Pagination
# ============================================================================

DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# ============================================================================
# File Upload (for apartment images - future use)
# ============================================================================

UPLOAD_FOLDER=uploads
MAX_FILE_SIZE=5242880  # 5MB in bytes
ALLOWED_EXTENSIONS=png,jpg,jpeg,gif

# ============================================================================
# Session Configuration
# ============================================================================

SESSION_TYPE=filesystem
PERMANENT_SESSION_LIFETIME=3600  # 1 hour in seconds

# ============================================================================
# Security
# ============================================================================

PASSWORD_MIN_LENGTH=8
JWT_SECRET_KEY=another-secret-key-for-jwt-tokens
JWT_ACCESS_TOKEN_EXPIRES=3600  # 1 hour

# ============================================================================
# INSTRUCTIONS
# ============================================================================

